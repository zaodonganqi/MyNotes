<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="0"
    android:exitFadeDuration="100">>
    <item android:state_checked="true" android:drawable="@mipmap/checkbox1">
        <color android:color="@color/grey"/>
    </item>
    <item android:state_selected="true" android:drawable="@mipmap/checkbox1">
        <color android:color="@color/grey"/>
    </item>
    <item android:state_pressed="true" android:drawable="@mipmap/checkbox1">
        <color android:color="@color/grey"/>
    </item>
    <item android:state_checked="false" android:drawable="@mipmap/checkbox2">
        <color android:color="@color/white"/>
    </item>
</selector>