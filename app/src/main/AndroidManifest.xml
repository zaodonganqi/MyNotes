<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/myicon"
        android:label="叮铃册"
        android:supportsRtl="true"
        android:theme="@style/Theme.RealyProject"
        tools:targetApi="31" >
        <activity
            android:name="com.view.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RealyProject">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.view.activity.SetAlphaActivity"
            android:exported="false" />
        <activity
            android:name="com.view.activity.NewTaskActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RealyProject"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.view.activity.ShowPageActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.RealyProject"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.view.activity.SettingActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.setpage_theme" />

        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>

</manifest>